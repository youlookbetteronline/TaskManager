<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.productivity.TestProductivityActivity"
    android:orientation="vertical">
    <com.example.gav.taskmanager.views.LineChartView
        android:id="@+id/lcvChart"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:paddingTop="5dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="24dp"
        app:coordinates="@array/coordinates_chart"/>
    <TextView
        android:id="@+id/tvDoneTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        tools:text="Done tasks:"
        android:layout_margin="16dp"
        android:textColor="@color/black"/>
    <com.example.gav.taskmanager.views.DaysOfWeekView
        android:id="@+id/dowLabels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labels="@array/labels_chart"
        app:label_textSize="14sp"
        />





</LinearLayout>